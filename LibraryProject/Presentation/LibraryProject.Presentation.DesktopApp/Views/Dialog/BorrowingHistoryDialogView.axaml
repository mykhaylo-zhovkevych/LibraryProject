<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:LibraryProject.Presentation.DesktopApp.ViewModels.Dialog"
             mc:Ignorable="d"
             MinWidth="300"
             x:Class="LibraryProject.Presentation.DesktopApp.Views.Dialog.BorrowingHistoryDialogView"
             x:DataType="vm:BorrowingHistoryDialogViewModel">

    <Design.DataContext>
		<vm:BorrowingHistoryDialogViewModel/>
    </Design.DataContext>

    <Border Background="#e5e7eb" CornerRadius="20" ClipToBounds="True" Margin="10" BorderThickness="1">
    <Grid RowDefinitions="Auto,*,Auto" RowSpacing="10">

      <TextBlock Text="{Binding Title}" FontSize="18" FontWeight="SemiBold" />

      <ListBox Grid.Row="1"
               ItemsSource="{Binding Borrowings}">
        <ListBox.ItemTemplate>
          <DataTemplate>
            <Border Padding="8" Margin="2">
              <StackPanel>
                <TextBlock Text="{Binding ItemCopy.Item.Name}" FontWeight="SemiBold"/>
                <TextBlock Text="{Binding LoanDate, StringFormat='Ausgeliehen: {0:d}'}"/>
                <TextBlock Text="{Binding DueDate, StringFormat='Fällig: {0:d}'}"/>
                <TextBlock Text="{Binding IsReturned, StringFormat='Zurückgegeben: {0}'}"/>
              </StackPanel>
            </Border>
          </DataTemplate>
        </ListBox.ItemTemplate>
      </ListBox>

      <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
        <Button Content="OK"
                Command="{Binding ConfirmCommand}" />

      </StackPanel>

    </Grid>
  </Border>
</UserControl>
