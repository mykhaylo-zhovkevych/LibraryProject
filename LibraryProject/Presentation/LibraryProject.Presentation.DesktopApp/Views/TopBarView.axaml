<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:LibraryProject.Presentation.DesktopApp.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="LibraryProject.Presentation.DesktopApp.Views.TopBarView"
             x:DataType="vm:DashboardViewModel">

<UserControl.Resources>
    <ResourceDictionary>
       <ResourceDictionary.MergedDictionaries>
        <ResourceInclude Source="avares://LibraryProject.Presentation.DesktopApp/Styles/TopbarStyles.axaml"/>
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
</UserControl.Resources>

  <Grid RowDefinitions="Auto,1,Auto">
    <Border Grid.Row="0" Background="#969696" Padding="8">
      <Grid ColumnDefinitions="*,Auto" VerticalAlignment="Center">

        <!-- Left container -->
        <TextBlock Grid.Column="0" Text="Bibliothek Verwaltung">
            <TextBlock.Styles>
                    <StaticResource ResourceKey="PageTitle"/>
            </TextBlock.Styles>
        </TextBlock>

        <!-- Right buttons -->
        <StackPanel Grid.Column="1">
            <StackPanel.Styles>
                    <StaticResource ResourceKey="CloseButtonContainer"/>
            </StackPanel.Styles>

          <Button Command="{Binding LogoutCommand}">
              <Button.Styles>
                    <StaticResource ResourceKey="CloseButton"/>
              </Button.Styles>
          </Button> 
          
        </StackPanel>
      </Grid>
    </Border>

    <!-- Divider line -->
    <Border Grid.Row="1" Height="2" Background="#404040" />

    <Border Grid.Row="2" Background="#969696" Padding="8">
      <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Left">
        <Button Command="{Binding GoToCatalogCommand}" CornerRadius="10" Padding="6" >Katalog</Button>
        <Button Command="{Binding GoToBorrowingCommand}" CornerRadius="10" Padding="6" >Ausgeliehen</Button>
        <Button Command="{Binding GoToProfileCommand}" CornerRadius="10" Padding="6" >Profil</Button>
        <Button Command="{Binding GoToManagementCommand}" CornerRadius="10" Padding="6" >Verwaltung</Button>
      </StackPanel>
    </Border>
  </Grid>



</UserControl>