<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <Style Selector="TextBlock.title">
      <Setter Property="FontSize" Value="16"/> 
      <Setter Property="FontWeight" Value="SemiBold"/>
      <Setter Property="Foreground" Value="#111827"/>
      <Setter Property="Margin" Value="6,6,6,6"/>
      <Setter Property="HorizontalAlignment" Value="Left" />
  </Style>

  <Style Selector="TextBlock.subtitle">
      <Setter Property="Foreground" Value="#6b7280"/>
      <Setter Property="Margin" Value="6,6,6,6"/>
      <Setter Property="HorizontalAlignment" Value="Left" />
  </Style>

    <Style Selector="Border.card">
		<Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="BorderBrush" Value="#e5e7eb"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BoxShadow" Value="0 5 15 #14000000"/>
        <Setter Property="Margin" Value="10"/>
    </Style>


  <Style Selector="Button.update">
    <Setter Property="Padding" Value="10"/>
    <Setter Property="CornerRadius" Value="10"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="BorderBrush" Value="#e5e7eb"/>
    <Setter Property="Background" Value="#969696"/>
  </Style>
  
  <Style Selector="Border.list-header">
    <Setter Property="CornerRadius" Value="10"/>
    <Setter Property="Padding" Value="8"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="BorderBrush" Value="#e5e7eb"/>
  </Style>

  <Style Selector="Border.list-header TextBlock">
    <Setter Property="FontWeight" Value="SemiBold"/>
  </Style>

  <!-- Row container -->
  <Style Selector="Border.list-row">
    <Setter Property="CornerRadius" Value="10"/>
    <Setter Property="Padding" Value="8"/>
    <Setter Property="Margin" Value="0,6,0,0"/>
    <Setter Property="BorderBrush" Value="#e5e7eb"/>
    <Setter Property="BorderThickness" Value="1"/>
      <Setter Property="Background" Value="Transparent"/>
  </Style>

    <Style Selector="ListBox.items-list">
      <Setter Property="Background" Value="Transparent"/>
      <Setter Property="BorderThickness" Value="0"/>
    </Style>

    <Style Selector="ListBox.items-list ListBoxItem">
      <Setter Property="Background" Value="Transparent"/>
      <Setter Property="BorderThickness" Value="0"/>
      <Setter Property="Padding" Value="0"/>
    </Style>


</Styles>
